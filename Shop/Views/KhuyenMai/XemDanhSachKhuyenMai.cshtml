@{
    Layout = "_LayoutAdmin";
}
<link rel="stylesheet" href="~/css/Admin/KhuyenMai/styleXemDanhSachKhuyenMai.css">

<div class="table1 container">
    <a href="/khuyenmai/themkhuyenmai" class="float-right"><button type="button" class="btn btn-primary btn-add">Thêm khuyến mãi</button></a>
    <table id="verticalScroll" class="table table-sm table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Tên khuyến mãi</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Phần trăm giảm</th>
                <th scope="col">Ngày bắt đầu</th>
                <th scope="col">Ngày kết thúc</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Sửa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.khuyenmai as List<Khuyenmai>)
            {   
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenKhuyenMai)</td>
                    <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhanTramGiam)%</td>
                    <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                    <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                    <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                    <td class="text-center"><a href="/khuyenmai/suakhuyenmai/@Html.DisplayFor(modelItem => item.KhuyenMaiId)"><i class="fad fa-edit"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
			$('#verticalScroll').DataTable({
				"scrollY": "380px",
				"scrollCollapse": true
			});
			$('.dataTables_length').addClass('bs-select');
		});
</script>