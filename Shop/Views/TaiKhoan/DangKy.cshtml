@* @model Shop.Models.Khachhang; *@
@model Shop.Models.Taikhoan;
@using Microsoft.AspNetCore.Http;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/Customer/TaiKhoan/styleDangNhap.css" rel="stylesheet" />
    <link href="~/bootrap4/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/fontawesome-pro-5.12.0-web/css/all.min.css">
</head>
<body class="bg-light">
    <div class="header w-100 d-flex">
        <span class="ml-2">ABCShop</span>
    </div>
    <div class="login d-flex">
       <form method="POST" asp-controller="taikhoan" asp-action="dangky">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="username">Tên tài khoản</label>
                    <input type="text" class="form-control pl-4" id="username" placeholder="Tên tài khoản" name="username" autocomplete="off" required>
                    <i class="fas fa-user-alt icon1"></i>
                    @if(ViewBag.errUsername!=null){
                        <span class="ml-2" style="color: red;font-size:14px">@ViewBag.errUsername</span>
                    }
                    
                </div>
                <div class="form-group col-md-6">
                    <label for="password">Mật khẩu</label>
                    <input type="password" class="form-control pl-4" id="password" placeholder="Mật khẩu" name="password" autocomplete="off" required>
                    <i class="fas fa-key icon2"></i>
                </div>
            </div>
            <div class="form-group">
                <label for="HoTen">Họ tên</label>
                <input type="text" class="form-control w-100" id="HoTen" placeholder="Họ tên" name="HoTen" autocomplete="off" required>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control w-100" id="Email" placeholder="Email" name="Email" autocomplete="off" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="NgaySinh">Ngày sinh</label>
                    <input type="date" class="form-control" id="NgaySinh" name="NgaySinh" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="Sdt">Số điện thoại</label>
                    <input type="number" class="form-control pl-4" id="Sdt" placeholder="Số điện thoại" autocomplete="off" name="Sdt" required>
                    <i class="fas fa-phone-alt icon3"></i>
                </div>
            </div>
            <div class="button d-flex">
                <button type="submit" class="btn">Tạo tài khoản</button>
            </div>
        </form>
    </div>
    <div class="footer">
        <div class="container pb-2">
            <div class="row w-100">
                <div class="col-md-3">
                    <h2>ABC Shop</h2>
                </div>
                <div class="col-md-3">
                    <h3>About</h3>
                    <div class="mt-2">
                        <p>Về chúng tôi</p>
                        <p>Hạt cà phê..</p>
                        <p>Blog</p>
                        <p>Cơ hội nghề nghiệp</p>
                        <p>Cửa hàng</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <h3>ALWAYS-ON SUPPORT</h3>
                    <div class="mt-2">
                        <p>Delivery 1800 6936 (07:00-21:00)</p>
                        <p>Support 02871 087 088 (07:00-21:00)</p>
                    </div>
                    <h3 class="mt-2">ADDRESS</h3>
                    <div class="mt-2">
                        <p>62 Tran Quang Khai, Tan Dinh, Quan 1 Ho Chi Minh, Vietnam</p>
                        <p>02871 087 088</p>
                        <p>hi@abcshop.vn</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <h3>DELIVERY</h3>
                    <div class="mt-2">
                        <p>Shipping methods</p>
                        <p>Payment</p>
                        <p>Cash voucher</p>
                        <p>Return</p>
                        <p>Exchange</p>
                    </div>
                </div>
            </div>
            <div style="border-bottom:1px solid white;width:100%" class="mt-3"></div>
            <div class="row pt-2">
                <div class="col-md-6">Copyright &copy 2020 The MilkTea House. All rights reserved.</div>
                <div class="col-md-6">
                    Privacy Policy | Terms of Use
                </div>
            </div>
        </div>
    </div>
</body>
</html>